#include <iostream>
#include <vector>

using namespace std;

int com[101][101];
int visit[101];
int N, M, ans;
int main() {
	scanf("%d %d\n", &N, &M);
	for (int i = 0; i < M; ++i) {
		int s, e;
		scanf("%d %d\n", &s, &e);
		com[s][e] = com[e][s] = 1;
	}

	vector<int> q;
	q.push_back(1);
	while (!q.empty()) {
		int cur = q.front();
		q.erase(q.begin());
		for (int i = 1; i <= N; ++i) {
			if (com[cur][i] == 1 && visit[i] == 0) {
				q.push_back(i);
				visit[i] = 1;
				++ans;
			}
		}
	}
	cout << ans - 1 << endl;
}
