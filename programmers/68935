#include <string>
#include <vector>

using namespace std;

int solution(int n) {
    int answer = 0;
    int t = n;
    string tmp;
    while (t > 0) {
        tmp += to_string(t % 3);
        t /= 3;
    }
    int k = 1;
    for (int i = tmp.size() - 1; i >= 0; --i) {
        answer += (k * (tmp[i] - '0'));
        k *= 3;
    }
    return answer;
}
