#include <string>
#include <vector>

using namespace std;

int solution(int n, vector<int> lost, vector<int> reserve) {
    int answer = 0;
    vector<int> stu(n + 1, 1);
    for (int i = 0; i < lost.size(); ++i)
        stu[lost[i]]--;
    for (int i = 0; i < reserve.size(); ++i) {
        stu[reserve[i]]++;
    }
    for (int i = 1; i < stu.size(); ++i) {
        if (stu[i] > 1) {
            if (i - 1 > 0 && stu[i - 1] == 0) {
                stu[i - 1]++;
                stu[i]--;
            } else if (i + 1 <= n && stu[i + 1] == 0) {
                stu[i + 1]++;
                stu[i]--;
            }
        }
    }
    for (int i = 1; i <= n; ++i)
        answer += stu[i] != 0 ? 1 : 0;
    return answer;
}
